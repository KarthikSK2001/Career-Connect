@model CareerConnect.Models.LoginViewModel

@{
    ViewBag.Title = "Login";
}
<h2 style="text-align: center; color: darkcyan">Login Here</h2>
<style>
    .error {
        color: red;
        font-weight: bolder;
    }

    .form-group {
        margin: 1rem;
    }

    label {
        margin: 0.5rem;
        font-weight: 500;
    }

    .form-control, #Password {
        border: 2px solid lightblue;
    }

    #formtag {
        border: 2px solid lightblue;
        border-radius: 1rem
    }
</style>

@using (Html.BeginForm("Login","Accounts",FormMethod.Post, new { @id = "formtag" }))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <div class="text-center" style="margin:0.5rem">
        <button type="button" class="btn btn-info" style="font-weight:600">
            To log in as a guest, use the following credentials:
            Email: guest@gmail.com
            Password: guest@123
        </button>
    </div>
    <div class="text-center" style="margin:0.5rem">
        <button type="button" class="btn btn-warning" style="font-weight:600">
            Our platform caters to various user roles, each with specific privileges
        </button>

    </div>
    <div class="text-center" style="margin:0.5rem">
        <button type="button" class="btn btn-success" style="font-weight:600">
            Admin: Has unrestricted access to all platform features
        </button>

    </div>
    <div class="text-center" style="margin:0.5rem">
        <button type="button" class="btn btn-success" style="font-weight:600">
            Job Seekers: Apply for jobs and create your professional profile
        </button>

    </div>
    <div class="text-center" style="margin:0.5rem">
        <button type="button" class="btn btn-success" style="font-weight:600">
            College Ambassadors: Contribute by posting college events
        </button>

    </div>
    <div class="text-center" style="margin:0.5rem">
        <button type="button" class="btn btn-success" style="font-weight:600">
            Guests: Access job listings and college events
        </button>

    </div>

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        <label>Email <span style="color:red;font-weight:bold">*</span></label>
        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger", @placeholder = "johndoe@gmail.com" })

    </div>

    <div class="form-group">
        <label>Password <span style="color:red;font-weight:bold">*</span></label>
        @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger", @placeholder = "Type Here.." })

    </div>
    <div class="form-group">
        <div class="btn-group">
            <button type="submit" class="btn btn-primary">Login</button>
        </div>
        <div class="btn-group">
            <a href="/Accounts/Signup" class="btn btn-warning">Register</a>
        </div>
    </div>

</div>
}

